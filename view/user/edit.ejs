<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head.ejs') %>
</head>
<body>
    <%- include('../layout/navbar.ejs') %>
    <div class="container" style="width: 50rem;">
        <form action="/blogs/edit/<%= data.id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for=""> Image</label>
                <input type="file" class="form-control" name="image" value="<%= data.imageUrl%> ">
            </div>
            <div class="form-group">
                <label for=""> Title</label>
                <input type="text" class="form-control " name="title" value="<%= data.title %>"> 
            </div>
            <div class="form-group">
                    <label for=""> Summery</label>
                    <input type="text" class="form-control " name="summery" value="<%= data.summery %>"> 
            </div>
            <div class="form-group">
                    <label for=""> Details</label>
                    <textarea name="details" class="form-control" id="" cols="30" rows="10" aria-valuetext='<%= data.description %>'></textarea> 
            </div>
            <input type="hidden" name="updateblog" value="<%= data.userid %>">

            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
   </div>

</body>
</html>